<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textViewStyle">@style/DefaultTextView</item>
    </style>

    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/gray_300</item>
        <item name="android:lineSpacingMultiplier">1.33</item>
        <item name="android:textSize">24sp</item>
        <!--        <item name="android:textFontWeight">500</item>-->
    </style>

    <style name="Widget.Theme.Promise.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Promise.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>